<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">


    <EditText
        android:id="@+id/edt_input_num"
        android:layout_width="166dp"
        android:layout_height="39dp"
        android:layout_margin="16dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="115dp"
        android:layout_height="43dp"
        android:hint="result"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/edt_input_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edt_input_num"
        app:layout_constraintTop_toTopOf="@+id/edt_input_num" />

    <Spinner
        android:id="@+id/spn_before_convert"
        android:layout_width="156dp"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_input_num" />

    <Spinner
        android:id="@+id/spn_after_convert"
        android:layout_width="151dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spn_before_convert"
        app:layout_constraintTop_toBottomOf="@+id/txt_result"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>